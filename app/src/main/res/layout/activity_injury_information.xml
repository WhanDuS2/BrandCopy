<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thejoeunit.www.brandcopy.DangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backIMG"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back_icon"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="6"
            android:src="@drawable/fm_logo_post" />


        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/writeBtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/write_activity_background"
            android:text="쓰기" />

    </LinearLayout>


    <ListView
        android:id="@+id/injuryListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write_activity_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:entries="@array/searchfillter"
            android:spinnerMode="dialog"></Spinner>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="1dp"
            android:background="#D4D4D4"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/contentEdt"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:background="#00000000"
            android:hint=""
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/searchTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/write_activity_background"
            android:gravity="center"
            android:text="검색"
            android:textColor="#000000"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
